{
    "verbose" : true,
    "n_cores" : 10, // default: 8 
    "model" : "LSTM", // LSTM or GRU
    "task" : "CLAS", // Regression (REGR) or classification (CLAS)

    // DATASET
    "dataset" : "Hs4_0-Tp6_0.csv", // "Hs2_5-Tp10_0.csv",
    "seq_len" : 50, // 10 seconds
    "look_ahead" : 35, // 7 seconds
    "reduce_frequency" : true, // 10 Hz --> 5 Hz
    "input_features" : [
                        // "RefX", "RefY", "RefZ",
                        // "Roll", "Pitch", "Yaw",
                        "RefUspace", "RefVspace",
                        "RefWspace"
                        ],
    "output_features" : [
                        // "RefX", "RefY", "RefZ",
                        // "Roll", "Pitch", "Yaw",
                        // "RefUspace", "RefVspace",
                        "RefWspace"
                        ],
    

    // Neural Network
    "n_epochs" : 1, 
    "batch_size" : 32,
    "validation_frequency" : 10,
    "train_test_split" : 0.80, // ratio of sequences in the TRAIN dataset
    "n_classes" : 5, // only used if 'task' is "CLAS"
        // LSTMs
    "lstm_num_layers" : 1,
    "lstm_hidden_dim" : 8,
        // GRUs
    "gru_num_layers" : 1,
    "gru_hidden_dim" : 8,
        // Adam Optimizer
    "adam_lr" : 0.005, // learning rate
    "adam_b1" : 0.75,
    "adam_b2" : 0.90,
    "decay_start" : 1.0, // percentage of 'adam_lr' at training start
    "decay_end" : 0.50, // percentage of 'adam_lr' at training end


    // Timeseries Analysis
    "enforce_stationarity" : false,
        // ARIMA
    "arima_p" : 30,
    "arima_i" : 0,
    "arima_q" : 30,
    "arima_alpha" : 0.05, // confidence interval
        // GARCH
    "arch_p" : 5,
    "garch_q" : 5, 
    "arch_lag" : 30,
    "arch_resid_lags" : 30,
    "volatility_mean" : "AR", // can be {'constant', 'zero', 'AR', 'ARX'}
    "volatility_dist" : "normal", // can be {'normal', 't', 'skewt'}
        // VAR
    "var_p" : 50,
    "varmax_q" : 10,
        // VECM
    "vecm_rank" : -1, // if -1 then all variables will be cointegrated


    // Locations
    "img_folder" : "/data/img/",
    "dataset_folder" : "/data/dataset/",
    "lstm_folder" : "/data/NN/LSTM/",
    "gru_folder" : "/data/NN/GRU/",
    "timeseries_folder" : "/data/timeseries/"
}
