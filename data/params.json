                            // "RefUspace",
			                // "RefVspace",
                            "RefWspace"
                         // "Dir", "Height",
                         // "PeakPeriod"
                        ],
    "output_features" : [
                         // "RefUspace", 
                         // "RefVspace"
                         "RefWspace"
                        ],


    // Locations
    "img_folder" : "/data/img/",
    "dataset_folder" : "/data/dataset/",
    "lstm_folder" : "/data/NN/LSTM/",
    "gru_folder" : "/data/NN/GRU/",
    "timeseries_folder" : "/data/timeseries/"
}
