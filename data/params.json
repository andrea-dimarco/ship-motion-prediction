{
    "n_cores" : 10, // default: 8 
    "verbose" : true,
    "dataset" : "Hs4_0-Tp6_0.csv", // "Hs2_5-Tp10_0.csv",
    "seq_len" : 100,
    "look_ahead" : 70,
    "model" : "GRU", // LSTM or GRU
    "task" : "REGR", // Regression (REGR) or classification (CLAS)
    

    // Neural Network
    "n_epochs" : 1001, 
    "batch_size" : 32,
    "validation_frequency" : 1000,
    "train_test_split" : 0.90, // ratio of sequences in the TRAIN dataset
    "n_classes" : 8, // only used if 'task' is "CLAS"
        // LSTMs
    "lstm_num_layers" : 1,
    "lstm_hidden_dim" : 16,
        // GRUs
    "gru_num_layers" : 1,
    "gru_hidden_dim" : 16,
        // Adam Optimizer
    "adam_lr" : 0.005, // learning rate
    "adam_b1" : 0.75,
    "adam_b2" : 0.90,
    "decay_start" : 1.0, // percentage of 'adam_lr' at training start
    "decay_end" : 0.50, // percentage of 'adam_lr' at training end


    // Timeseries Analysis
    "enforce_stationarity" : false,
        // ARIMA
    "arima_p" : 70,
    "arima_i" : 0,
    "arima_q" : 70,
    "arima_alpha" : 0.05, // confidence interval
        // Volatility
    "arch_p" : 5,
    "garch_q" : 5, 
    "arch_lag" : 30,
    "arch_resid_lags" : 30,
    "volatility_mean" : "AR", // can be {'constant', 'zero', 'AR', 'ARX'}
    "volatility_dist" : "normal", // can be {'normal', 't', 'skewt'}


    // Environment
    "input_features" : [
