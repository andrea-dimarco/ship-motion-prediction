{
    "n_cores" : 8, // default: 8 
    "verbose" : true,
    "dataset" : "data.csv",
    "model" : "LSTM", // LSTM or GRU
    "task" : "REGR", // Regression (REGR) or classification (CLAS)
    

    // Neural Network
    "n_epochs" : 1001, 
    "batch_size" : 32,
    "validation_frequency" : 500,
    "seq_len" : 10,
    "train_test_split" : 0.95, // ratio of sequences in the TRAIN dataset
    "n_classes" : 8, // only used if 'task' is "CLAS"
        // LSTMs
    "lstm_num_layers" : 1,
    "lstm_hidden_dim" : 8,
        // GRUs
    "gru_num_layers" : 1,
    "gru_hidden_dim" : 8,
        // Adam Optimizer
    "adam_lr" : 0.005, // learning rate
    "adam_b1" : 0.75,
    "adam_b2" : 0.90,
    "decay_start" : 1.0, // percentage of 'adam_lr' at training start
    "decay_end" : 0.75, // percentage of 'adam_lr' at training end

    
    // Statistical Model Checking (SMC)
    "smc_epsilon" : 0.1, // precision 
    "smc_delta" : 0.1, // confidence
    "smc_a" : 0.0, // lower bound of winning probability
    "smc_b" : 1.0, // upper bound of winning probability


    // Locations
    "img_folder" : "/data/img/",
    "dataset_folder" : "/data/dataset/",
    "lstm_folder" : "/data/LSTM/",
    "gru_folder" : "/data/GRU/"
}
